generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Event {
  transactionHash      String   @id @unique
  type                 String // Delta or Augustus
  user                 String
  gasUsed              String
  gasPrice             String   @default("0")
  gasUsedChainCurrency String   @default("0")
  gasUsedUSD           Float    @default(0)
  ethUsdPrice          Float    @default(0)
  pspUsdPrice          Float    @default(0)
  totalPSP             String   @default("0")
  sePSP1AmountEth      String   @default("0")
  sePSP1AmountOp       String   @default("0")
  sePSP2AmountEth      String   @default("0")
  sePSP2AmountOp       String   @default("0")
  input                String   @default("")
  decodedFunction      String   @default("")
  boost                Float    @default(0)
  score                String   @default("0")
  epochActivelyStaking Int      @default(0)
  gasRefund            String   @default("0")
  refundedAmountUsd    Float    @default(0)
  refundedAmountPSP    String   @default("0")
  blockNumber          String
  blockTimestamp       Int      @default(0)
  status               String   @default("pending")
  createdAt            DateTime @default(now())
}

model Metadata {
  id        Int      @id @default(autoincrement())
  type      String
  name      String
  value     String
  createdAt DateTime @default(now())
}

model SePSP2Event {
  id              Int       @id @default(autoincrement())
  chain           String
  type            String
  user            String
  amount          String
  transactionHash String
  blockNumber     String
  blockTimestamp  DateTime?
}

model UserEpochBalance {
  id            Int      @id @default(autoincrement())
  user          String
  epoch         Int
  from          DateTime
  to            DateTime
  fromBlock     String
  toBlock       String
  sePSP2Balance String
  pspBalance    String
  wethBalance   String
  eventsIds     String
  chain         String
}

model UserParaBoost {
  id                    Int      @id @default(autoincrement())
  user                  String   @unique
  paraBoost             Float
  epochsGeneratingBoost Int      @default(0)
  lastEpochProcessed    Int      @default(0)
  lastCalculated        DateTime
}

model PSPUsdValue {
  id    Int      @id @default(autoincrement())
  date  DateTime
  value Float
}

model OptimismBlock {
  id        Int @id @default(autoincrement())
  number    Int
  timestamp Int
}
