generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Event {
  type            String // Delta or Augustus
  user            String
  blockNumber     String
  transactionHash String   @id @unique
  gasUsed         String
  createdAt       DateTime @default(now())
}

model Metadata {
  id        Int      @id @default(autoincrement())
  type      String
  name      String
  value     String
  createdAt DateTime @default(now())
}

model SePSP2Event {
  id              Int       @id @default(autoincrement())
  chain           String
  type            String
  user            String
  amount          String
  transactionHash String
  blockNumber     String
  blockTimestamp  DateTime?
}

model UserEpochBalance {
  id            Int      @id @default(autoincrement())
  user          String
  epoch         Int
  from          DateTime
  to            DateTime
  fromBlock     String
  toBlock       String
  sePSP2Balance String
  pspBalance    String
  wethBalance   String
  eventsIds     String
  chain         String
}

model UserParaBoost {
  id             Int      @id @default(autoincrement())
  user           String
  paraBoost      Float
  lastCalculated DateTime
}
