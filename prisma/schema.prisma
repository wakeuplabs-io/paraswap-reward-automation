generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Event {
  transactionHash String   @id @unique
  type            String // Delta or Augustus
  user            String
  gasUsed         String
  gasPrice        String   @default("0")
  ethUsdPrice     Float    @default(0)
  pspUsdPrice     Float    @default(0)
  totalPSP        String   @default("0")
  sePSP1Amount    String   @default("0")
  sePSP2Amount    String   @default("0")
  input           String   @default("")
  decodedFunction String   @default("")
  blockNumber     String
  blockTimestamp  Int      @default(0)
  createdAt       DateTime @default(now())
}

model Metadata {
  id        Int      @id @default(autoincrement())
  type      String
  name      String
  value     String
  createdAt DateTime @default(now())
}

model SePSP2Event {
  id              Int       @id @default(autoincrement())
  chain           String
  type            String
  user            String
  amount          String
  transactionHash String
  blockNumber     String
  blockTimestamp  DateTime?
}

model UserEpochBalance {
  id            Int      @id @default(autoincrement())
  user          String
  epoch         Int
  from          DateTime
  to            DateTime
  fromBlock     String
  toBlock       String
  sePSP2Balance String
  pspBalance    String
  wethBalance   String
  eventsIds     String
  chain         String
}

model UserParaBoost {
  id             Int      @id @default(autoincrement())
  user           String
  paraBoost      Float
  lastCalculated DateTime
}

model PSPUsdValue {
  id    Int      @id @default(autoincrement())
  date  DateTime
  value Float
}
